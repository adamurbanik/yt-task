{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "app/src/app.ts",
        "app/src/bootstrap.ts",
        "app/src/controllers/library-controller.ts",
        "app/src/directives/video-modal-controller.ts",
        "app/src/directives/video-modal.ts",
        "app/src/models/AppStorage.ts",
        "app/src/models/library-service.ts",
        "app/src/models/localStorage.ts",
        "app/src/models/video-services.ts",
        "app/src/models/vimeo-service.ts",
        "app/src/models/yt-service.ts",
        "app/src/router/router.ts",
        "typings/main.d.ts",
        "typings/main/ambient/angular-animate/index.d.ts",
        "typings/main/ambient/angular-ui-router/index.d.ts",
        "typings/main/ambient/angular/index.d.ts",
        "typings/main/ambient/bootstrap/index.d.ts",
        "typings/main/ambient/jquery/index.d.ts"
    ]
}
